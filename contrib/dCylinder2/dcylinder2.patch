+    return false;
+  }
+
+  if (!_cldTestCircleToEdgeAxis(cData, v0, v1, v2, vccABottom, cData.vCylinderAxis, v0, v2, 20)) 
+  {
+    return false;
+  }
+
+  return true;
+}
