+// helper for less key strokes
+// r = ( (v1 - v2) cross v3 ) cross v3
+inline void _CalculateAxis(const dVector3& v1,
+						   const dVector3& v2,
+						   const dVector3& v3,
+						   dVector3& r)
+{
+	dVector3 t1;
+	dVector3 t2;
+
+	dVector3Subtract(v1,v2,t1);
+	dVector3Cross(t1,v3,t2);
+	dVector3Cross(t2,v3,r);
+}
